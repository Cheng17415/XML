<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="libro">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="titulo" type="xs:string"/>
                <xs:element name="fecha-publicacion" type="xs:date"/>
                <xs:element name="precio" type="xs:decimal"/>
                <xs:element name="disponible" type="xs:boolean"/>
                <xs:element name="fecha-ingreso" type="xs:date"/>  
                <xs:element name="tipo" type="xs:string" fixed="Libro"/>
                <xs:element name="ejemplares" type="xs:integer" default="5"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>